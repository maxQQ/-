.chat {
  position: fixed;
  z-index: 100;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  bottom:180px;
  box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.3);
}

.chat .a001 {
  width: 100rpx;
  height: 100rpx;
  position: relative;
}

.chat .a001 .b001 {
  width: 105rpx;
  margin-top: 0rpx;
  height: 105rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.chat .a001 .b002 {
  opacity: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  z-index: 10;
}

/* components/getPhone/getPhone.wxss */
.getPhoneNumber_box {
  position: fixed;
  width: 100%;
  height: 100%;
  opacity: 1;
  z-index: 22;
  top: 0rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.getPhoneNumber {
  display: block;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 420rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 33rpx;
  color: #fff;
  background-color: #42aafd;
  border-radius: 8rpx;
  border: none;
  text-align: center;
  cursor: pointer;
}
.getPhoneNumber_box .b1 {
  background: #fff;
  border-radius: 10rpx;
  padding-bottom: 40rpx;
  width: 80%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
}
.getPhoneNumber_box .b1_1 {
  height: 116rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #474747;
  border-bottom: 1px solid #ededed;
}
.getPhoneNumber_box .b1_2 {
  text-align: center;
  color: #5d5d5d;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 40rpx auto 60rpx;
}
.getPhoneNumber_box button {
  margin: 0 60rpx;
  background: #04be01;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border: none;
  font-size: 40rpx;
  border-radius: 80rpx;
  outline: none;
}